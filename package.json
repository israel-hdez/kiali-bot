{
  "name": "kiali-bot",
  "version": "1.0.0",
  "description": "A bot to manage the workflow for Kiali",
  "author": "Kiali Mantainers Team <kiali-dev@googlegroups.com> (https://kiali.io)",
  "license": "ISC",
  "repository": "https://github.com/kiali/kiali-bot.git",
  "homepage": "https://github.com/kiali/kiali-bot",
  "bugs": "https://github.com/kiali/kiali-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"(npm run build || exit 1) && (npm start || exit 1)\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@octokit/rest": "^16.21.0",
    "@types/nock": "^9.3.0",
    "handlebars": "^4.0.11",
    "jira-client": "^6.4.1",
    "nock": "^10.0.0",
    "node-cmd": "^3.0.0",
    "probot": "^9.1.1",
    "tempfile": "^2.0.0"
  },
  "devDependencies": {
    "@octokit/webhooks": "^5.3.3",
    "@types/handlebars": "^4.0.39",
    "@types/jest": "^24.0.0",
    "@types/jira-client": "^6.4.0",
    "@types/node": "^11.9.0",
    "@types/tempfile": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "jest": "^24.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
